<odoo>
    <!-- Action untuk Print Receipt -->
    <record id="action_report_student_receipt" model="ir.actions.report">
        <field name="name">Kwitansi Pembayaran</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">school_management.report_student_receipt_template</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
        <field name="print_report_name">'Kwitansi_' + object.name</field>
    </record>

    <!-- Template Kwitansi -->
    <template id="report_student_receipt_template">
        <t t-call="web.basic_layout">
            <t t-set="doc" t-value="docs"/>
            <div class="page">
                <h2 class="text-center">Kwitansi Pembayaran</h2>
                <p><strong>Nama Siswa:</strong> <span t-esc="doc.student_id.name"/></p>
                <p><strong>Kelas:</strong> <span t-esc="doc.student_id.class_id.name"/></p>
                <p><strong>Billing Period:</strong> <span t-esc="doc.billing_period"/></p>
                <p><strong>Nomor Invoice:</strong> <span t-esc="doc.name"/></p>
                <p><strong>Tanggal:</strong> <span t-esc="doc.invoice_date"/></p>

                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Deskripsi</th>
                            <th>Jumlah</th>
                            <th>Harga</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="doc.invoice_line_ids" t-as="line">
                            <tr>
                                <td><span t-esc="line.name"/></td>
                                <td><span t-esc="line.quantity"/></td>
                                <td><span t-esc="line.price_unit"/></td>
                                <td><span t-esc="line.price_total"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>

                <h4 class="text-end">Total Dibayar: <span t-esc="doc.amount_total"/></h4>
            </div>
             <div class="row mt-3">
                    <div class="col-12">
                        <strong>Terbilang: </strong>
                        <span t-esc="'Satu Juta Seratus Tujuh Puluh Lima Ribu Rupiah'"/>
                    </div>
                </div>
                
                <div class="row mt-5">
                    <div class="col-12">
                        <p><strong>Catatan:</strong></p>
                        <ul>
                            <li>Diterima sebagai bukti pembayaran yang SAH.</li>
                            <li>Uang yang sudah dibayarkan tidak dapat diminta kembali.</li>
                        </ul>
                    </div>
                </div>

                <div class="row mt-5 text-center">
                    <div class="col-6">
                    </div>
                    <div class="col-6">
                        <p>Karanganyar, <span t-esc="doc.invoice_date" t-options='{"widget": "date", "format": "dd MMMM yyyy"}'/></p>
                        <p>Yang Menerima,</p>
                        <br/><br/>
                        <p>(________________________)</p>
                    </div>
                </div>
        </t>
    </template>
</odoo>

<odoo>
    <!-- TREE VIEW -->
    <record id="view_school_class_tree" model="ir.ui.view">
        <field name="name">school.class.tree</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="teacher_id"/>
                <field name="capacity"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_school_class_form" model="ir.ui.view">
        <field name="name">school.class.form</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <form string="Class">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="teacher_id"/>
                        <field name="capacity"/>
                        <field name="schedule"/>
                        <field name="active"/>
                    </group>
                    <notebook>
                        <page string="Students">
                            <field name="student_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="partner_id"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_school_class" model="ir.actions.act_window">
        <field name="name">Classes</field>
        <field name="res_model">school.class</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>

<odoo>
    <record id="view_account_move_form_inherit_school" model="ir.ui.view">
        <field name="name">account.move.form.inherit.school</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <header position="inside">
                <!-- Tombol hanya muncul jika status Paid -->
                <button name="%(action_report_student_receipt)d"
                        string="Cetak Kwitansi"
                        type="action"
                        class="btn-primary"
                        attrs="{'invisible': [('payment_state', '!=', 'paid')]}"/>
            </header>
        </field>
    </record>
</odoo>

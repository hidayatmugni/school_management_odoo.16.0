<odoo>
    <!-- ==========================
         TREE VIEW - TEACHER
    =========================== -->
    <record id="view_school_teacher_tree" model="ir.ui.view">
        <field name="name">school.teacher.tree</field>
        <field name="model">school.teacher</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="phone"/>
                <field name="student_count"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- ==========================
         FORM VIEW - TEACHER
    =========================== -->
    <record id="view_school_teacher_form" model="ir.ui.view">
        <field name="name">school.teacher.form</field>
        <field name="model">school.teacher</field>
        <field name="arch" type="xml">
            <form string="Teacher">
                <header>
                    <!-- Tombol Toggle Students -->
                    <button name="action_toggle_students_active"
                            type="object"
                            string="Toggle Students"
                            class="btn-primary"/>
                    <!-- Tombol Print PDF -->
                    <button name="%(action_report_teacher_students)d"
                            string="Cetak Daftar Guru dan Siswa"
                            type="action"
                            class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="address"/>
                            <field name="student_count" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Classes">
                            <field name="class_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="capacity"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_school_teacher" model="ir.actions.act_window">
        <field name="name">Teachers</field>
        <field name="res_model">school.teacher</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
